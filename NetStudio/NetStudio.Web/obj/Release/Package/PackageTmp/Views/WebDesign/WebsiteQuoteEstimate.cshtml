@model NetStudio.Model.Email.EmailFormModel

@{
    ViewBag.Title = "Web design|creare site|magazin online|facebook|Bucuresti|Iasi|Cluj-Napoca|Suceava|Constanta|Timisoara|webdesign|promovare online|grafica publicita";
}
@section metatags
{
    <meta name="keywords" content="Web design, creare site, magazin online, facebook, Bucuresti, Iasi, Cluj-Napoca, Suceava, Constanta, Timisoare, webdesign, promovare online, grafica publicitara" />
    <meta name="description" content="Web design, creare site, magazin online, facebook, Bucuresti, Iasi, Cluj-Napoca, Suceava, Constanta, Timisoare, webdesign, promovare online, grafica publicitara" />
}




@Html.Partial("_SliderPartial")

<div class="row">
    <div class="container">
        <div class="col-md-12">
            <h2>Estimare proiect</h2>
            @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <h4>Va rugam completati formularul cu datele necesare pentru noul proiect.</h4>
            <hr />
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.FromName,"Nume", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", @placeholder = "Nume" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromEmail,"Email", new { @class = "control-label" })

                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.FromEmail)

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone,"Telefon", new { @class = "control-label" })

                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Telefon" })
                    @Html.ValidationMessageFor(m => m.Phone)

                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DomainName,"Numele domeniului, daca il aveti deja", new { @class = "control-label" })

                    @Html.TextBoxFor(m => m.DomainName, new { @class = "form-control", @placeholder = "http://www.NumeDomeniu.ro" })
                    @Html.ValidationMessageFor(m => m.DomainName)

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DomainActivity,"Domeniu de activitate", new { @class = "control-label" })

                    @Html.TextAreaFor(m => m.DomainActivity, new { @class = "form-control", @placeholder = "Domeniu de activitate" })
                    @Html.ValidationMessageFor(m => m.DomainActivity)

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LikedWebsites,"Siteuri care va plac", new { @class = "control-label" })

                    @Html.TextAreaFor(m => m.LikedWebsites, new { @class = "form-control", @placeholder = "Site-uri care va plac" })
                    @Html.ValidationMessageFor(m => m.LikedWebsites)
                </div>

                <div class="form-group">
                    @Html.Label("Type of website","Tip website", new { @class = "control-label" })
                    @Html.DropDownList("ServiceSelect", (MultiSelectList)ViewBag.SelectService, "Selectati  o optiune", new { @class = "form-control" })

                </div>
                <div class="well well-sm" style="max-width:280px;">
                    @Html.Label("Servicii", new { @class = "control-label" })
                    @foreach (var item in Model.ServiceTypes)
                        {
                        <div class="checkbox">
                            <label><input type="checkbox" value="@item.Name" id="@item.Id">@item.Name</label>
                        </div>
                        }
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Message,"Mesaj aditional", new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "Mesaj aditional" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>




                <div class="form-group">
                    @*<div class="col-md-offset-2 col-md-10">*@
                    <input type="reset" class="btn btn-default" value="Reset data" />
                    <input type="submit" class="btn btn-default" value="Send data" />
                    @*</div>*@
                </div>
            </div>

            <div class="col-md-8">
                <h2>Completati formularul</h2>
                <p>Va rugam sa completati formularul alaturat, in acest mod va putem ajuta mai mult cu planificarea acestuita cat si calcularea limitelor de timp disponibile.</p>

                <h2>Detalii proiect</h2>
                Va transmitem urmatoarele date dupa completarea formularului in maxim 24H
                <ul>
                    <li>Costuri gazduire, inregistrare domeniu, implementare site, optimizare SEO</li>
                    <li>Limitele de timp</li>
                    <li>Itemurile obligatorii, optionale sau recomandate</li>
                    <li>Detalii despre modul de lucru</li>
                    <li>Detalii despre tehnologiile folosite</li>
                    <li>Targetul website-ului,a businessului</li>
                    <li>Tehnici de marketing</li>
                </ul>
                <h2>Contact pentru estimare proiect</h2>
                <ul>
                    <li>Luni-vineri:19:00 21:00</li>
                    <li>Contact prin tel sau Skype meeting</li>
                </ul>
                <span>Completand formularul va exprimati acordul pentru salvarea adresei de Email in baza noastra de date si pentru a primi periodic oferte din partea NetStudioDesign. Informatii Dvs. nu sunt transmisibile catre terti.</span>
            </div>
            }
        </div>
    </div>
</div>

