@model NetStudio.Model.Email.ContactFormModel
@{
    ViewBag.Title = "Web design|creare site|magazin online|facebook|Bucuresti|Iasi|Cluj-Napoca|Suceava|Constanta|Timisoara|webdesign|promovare online|grafica publicita";
}
@section metatags
{
    <meta name="keywords" content="Web design, creare site, magazin online, facebook, Bucuresti, Iasi, Cluj-Napoca, Suceava, Constanta, Timisoare, webdesign, promovare online, grafica publicitara" />
    <meta name="description" content="Web design, creare site, magazin online, facebook, Bucuresti, Iasi, Cluj-Napoca, Suceava, Constanta, Timisoare, webdesign, promovare online, grafica publicitara" />
}




@Html.Partial("_SliderPartial")

<div class="row">
    <div class="container">
        <div class="col-md-12">
            <h2>@ViewBag.Title.</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h4>Send your thougths.</h4>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.FromName, new { @class = "control-label" })
            
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromName)
                   
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromEmail, new { @class = "control-label" })
                   
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromEmail)
                    
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.Message, new { @class = "control-label" })
                    
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Message)
                    
                </div>
                <div class="form-group">
                    @*<div class="col-md-offset-0 col-md-10">*@
                        <input type="submit" class="btn btn-default" value="Send" />
                    @*</div>*@
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
